<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center" id="top-bar">
			<img src="/assets/images/bacon.png" alt="bacon" />
			<h1>Bacon List</h1>
		</div>
		<div class="col-xs-6 text-center" class="task">
			<div class="row">
			  {{#each bacon}}
			  	{{#unless this.sold}}
				<div class="col-xs-9 text-center">
					<pre>{{this.id}}. {{this.item_name}}
					</pre>
				  		<!-- {{this.Date}} -->
				</div>
				<div class="col-xs-3 text-center">
					<form method="POST" action="/bacon/update?_method=PUT" class="button-size">
						<input input type="hidden" type="text" name="bacon_id" value={{this.id}}><br>
						<button type="submit" class="btn btn-default">Buy it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>
		<div class="col-xs-6 text-center" class="task">
			  {{#each bacon}}
			  	{{#if this.sold}}
			  		<input class="form-control" type="text" placeholder="{{this.id}} . {{this.item_name}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-12 text-center enter_section">
			<form action="/bacon/create" method="POST">
				<input type="text" class="form-control" name="item_name" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
			</form>
			<p>Enter a bacon you want to add, then click the "Submit" button.</p>
		</div>
	</div>
</div>
